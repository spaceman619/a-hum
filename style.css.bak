/*Sidebar Styles*/
#content {
  margin-right: 15%;
  margin-left: 15%;
  width: 650px;
}
#content .aside {
  padding-top: 0px;
  colour: #ac0017;
}
#content .aside ul ul {
  margin-bottom: 0px;
  margin-left: 0px;
}
#primary, #secondary {
  display: none;
}
