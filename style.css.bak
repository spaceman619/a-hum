/*{LESS} Variables*/
/*{LESS} Mixins*/
.corners {
  border-radius: 15px;
  -moz-border-radius: 15px;
  -webkid-border-radius: 15px;
}
.dropshadow {
  box-shadow: 0px 0px 5px 3px #ac0017;
  -moz-box-shadow: 0px 0px 5px 3px #ac0017;
  -webkit-box-shadow: 0px 0px 5px 3px #ac0017;
}
.central {
  clear: both;
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 640px;
}
.border {
  border-color: #CCCCCC;
  border-style: solid;
  border-width: 1px;
}
/* Overall Changes */
p, li {
  font-family: "Metrophobic", serif;
  font-weight: 400;
  padding-top: 10px;
  font-size: 16px;
  line-height: 17px;
}
#wrapper {
  background: url(images/bg4.png);
}
a {
  color: #ac0017;
}
/*Title Style*/
#blog-title a {
  color: #ac0017;
  font-family: "Yanone Kaffeesatz", sans serif;
  font-size: 72pt;
  font-weight: 400;
  padding-bottom: 0px;
  text-decoration: none;
  text-shadow: 2px, 2px, 2px, #ac0017;
}
#blog-title a:active, #blog-title a:hover {
  color: #000000;
  text-shadow: 2px, 2px, 2px, #000000;
}
blog-description {
  font-family: "Yanone Kaffeesatz", sans serif;
  font-size: 28px;
  font-style: italic;
  colour: #ac0017;
  margin-top: 22px;
}
/*
